<h2 class="log-in">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="field">
    <!--<%= f.label :"名前"%><br />-->
    <%= f.text_field :name, autofocus: true, class:"field-box", placeholder:"名前" %>
  </div>

  <div class="field">
    <!--<%= f.label :"社員番号" %><br />-->
    <%= f.number_field :staff_num, class:"field-box", placeholder:"社員番号"  %>
  </div>
  
  <!--
  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>-->

  <div class="field">
    <!--<%= f.label :"パスワード" %><br />-->
    <%= f.password_field :password, autocomplete: "current-password", class:"field-box", placeholder:"パスワード"  %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
