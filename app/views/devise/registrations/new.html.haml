%h2.sign-up 新規登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
    .field
      / <haml_loud> f.label :&quot;名前&quot;</haml_loud><br />
      = f.text_field :name, autofocus: true, class:"field-box", placeholder:"名前"
    .field
      / <haml_loud> f.label :&quot;社員番号&quot; </haml_loud><br />
      = f.number_field :staff_num, class:"field-box", placeholder:"社員番号"
    .field
      / <haml_loud> f.label :&quot;メールアドレス&quot; </haml_loud><br />
      = f.email_field :email, autofocus: true, autocomplete: "email", class:"field-box", placeholder:"メールアドレス"
    .field
      / <haml_loud> f.label :&quot;パスワード&quot; </haml_loud>
      - if @minimum_password_length
      %br/
      = f.password_field :password, autocomplete: "new-password", class:"field-box", placeholder:"パスワード(6文字以上)"
    .field
      / <haml_loud> f.label :&quot;パスワード再確認&quot; </haml_loud><br />
      = f.password_field :password_confirmation, autocomplete: "new-password", class:"field-box", placeholder:"パスワード再確認"
    .actions
      = f.submit "新規登録"
= render "devise/shared/links"