- if user_signed_in?
  - unless post.like_user(current_user.id).blank?
    = link_to post_like_path(post_id: post.id ,id: post.likes[0].id), method: :delete, remote: true do
      .c-like-btn
        .c-red-heart
          = fa_icon 'heart'
        %span.c-red-text
          = post.likes_count
  - else
    = link_to post_likes_path(post.id), method: :post, remote: true do
      .c-like-btn
        .c-gray-heart
          =fa_icon 'heart'
        %span.c-grey-text
          = post.likes_count
- else
  - if post.likes_count > 0
    .c-like-btn
      .c-red-heart
        = fa_icon 'heart'
      %span.c-red-text
        = post.likes_count
  - else
    .c-like-btn
      .c-gray-heart
        =fa_icon 'heart'
      %span.c-grey-text
        = post.likes_count
